    <style>
        :root {
            --primary-green: #2D6A41;
            --accent-orange: #FF9F1C;
            --light-gray: #F8F8F8;
            --white: #FFFFFF;
            --dark-text: #333333;
        }

        body {
            background-color: var(--light-gray);
            min-height: 100vh;
            font-family: 'Poppins', sans-serif;
            color: var(--dark-text);
            line-height: 1.6;
        }

        .card {
            border: none;
            border-radius: 15px;
            box-shadow: 0 10px 30px rgba(45, 106, 65, 0.1);
            background: var(--white);
        }

        .card-header {
            background: var(--primary-green);
            color: white;
            border-radius: 15px 15px 0 0 !important;
            border: none;
            padding: 1.5rem;
        }

        .card-header h3 {
            margin: 0;
            font-weight: 600;
        }

        .form-control {
            border: 2px solid #e9ecef;
            border-radius: 30px;
            padding: 15px 20px;
            transition: all 0.3s ease;
            font-family: 'Poppins', sans-serif;
        }

        .form-control:focus {
            border-color: var(--primary-green);
            box-shadow: 0 0 0 0.2rem rgba(45, 106, 65, 0.25);
        }

        .form-label {
            font-weight: 500;
            color: var(--primary-green);
            margin-bottom: 8px;
        }

        .btn-primary {
            background-color: var(--accent-orange);
            border: none;
            padding: 15px 30px;
            font-weight: 500;
            border-radius: 30px;
            transition: all 0.3s ease;
            font-family: 'Poppins', sans-serif;
        }

        .btn-primary:hover {
            background-color: #e88e00;
            transform: translateY(-2px);
            box-shadow: 0 5px 15px rgba(255, 159, 28, 0.4);
        }

        .btn-outline-secondary {
            border-color: #ddd;
            color: var(--primary-green);
            border-radius: 0 30px 30px 0;
        }

        .btn-outline-secondary:hover {
            background-color: var(--primary-green);
            border-color: var(--primary-green);
        }

        .alert-danger {
            border: none;
            border-radius: 10px;
            background-color: #f8d7da;
            color: #721c24;
            border-left: 4px solid #dc3545;
        }

        a {
            color: var(--primary-green);
            text-decoration: none;
            transition: color 0.3s ease;
        }

        a:hover {
            color: var(--accent-orange);
            text-decoration: underline;
        }

        .form-check-input:checked {
            background-color: var(--primary-green);
            border-color: var(--primary-green);
        }

        .form-check-input:focus {
            border-color: var(--primary-green);
            box-shadow: 0 0 0 0.25rem rgba(45, 106, 65, 0.25);
        }

        .container {
            padding-top: 3rem;
        }

        hr {
            border-color: rgba(45, 106, 65, 0.2);
        }

        .text-muted {
            color: #666 !important;
        }

        .fw-bold {
            font-weight: 600 !important;
        }


        nav ul {
            display: flex;
            list-style: none;
            margin: 0;
            padding: 0;
            gap: 1.5rem;
            align-items: center;
        }

        nav ul li a {
            color: var(--dark-text);
            text-decoration: none;
            font-weight: 500;
            transition: color 0.3s ease;
            color: var(--primary-green);
        }

        nav ul li a:hover {
            color: var(--accent-orange);
        }


        /* Style pour le garde-manger - minimal et coh√©rent */
        .pantry-link {
            background-color: var(--primary-green);
            color: white !important;
            padding: 8px 15px;
            border-radius: 20px;
            font-weight: 500;
            transition: all 0.3s ease;
            display: flex;
            align-items: center;
            gap: 5px;
        }

        .pantry-link:hover {
            background-color: var(--accent-orange);
            color: white !important;
            text-decoration: none;
        }


        .logo-text .orange {
            color: var(--accent-orange);
        }


        @media (max-width: 768px) {
            .container {
                padding: 1rem;
            }

            .card {
                margin: 1rem 0;
            }

            .form-control {
                padding: 12px 18px;
            }

            .btn-primary {
                padding: 12px 25px;
            }
        }
    </style>

