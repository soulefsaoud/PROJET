    </section>

    <section class="recipe-search" id="search">
        <div class="container">
            <h2 class="section-title">Que voulez-vous cuisiner aujourd'hui ?</h2>
            <div class="search-container">


                <p>Suggestions d'ingrédients populaires :</p>
                <div class="ingredient-tags">
                    <span class="ingredient-tag">Poulet</span>
                    <span class="ingredient-tag">Tomates</span>
                    <span class="ingredient-tag">Pâtes</span>
                    <span class="ingredient-tag">Œufs</span>
                    <span class="ingredient-tag">Fromage</span>
                    <span class="ingredient-tag">Riz</span>
                </div>
            </div>
        </div>
    </section>

    <section class="recipes" id="recipes">
        <div class="container">
            <h2 class="section-title">Recettes populaires</h2>
            <div class="recipe-grid">
                {% for recette in recettes %}
                    <div class="recipe-card">
                        <div class="recipe-image"></div>
                        <div class="recipe-info">
                            <h3 class="recipe-title">{{ recette.nom }}</h3>
                            <div class="recipe-meta">
                                <span>{{ recette.tempsPreparation }}</span>
                                <span>{{ recette.difficulte }}</span>
                            </div>
                            <div class="recipe-ingredients">

                                <tr>

                                    <td>{{ recette.nom }}</td>
                                    <td>
                                        {% if recette.ingredientRecettes|length > 0 %}
                                        <ul>
                                            {% for ingredientRecette in recette.ingredientRecettes %}
                                                <li>
                                                    {{ ingredientRecette.ingredient.nom }} - {{ ingredientRecette.quantite }} {{ ingredientRecette.getUniteMesure() }}
                                                </li>
                                            {% endfor %}
                                        </ul>
                                        {% endif %}


                            </div>
                            <a href="#" class="recipe-btn">Voir la recette</a>
                        </div>
                    </div>
                {% endfor %}
            </div>
        </div>
    </section>

<!DOCTYPE html>
<html>
<head>
    <title>Gestionnaire de Recettes</title>
    <style>
        .tag {
            display: inline-block;
            padding: 5px 10px;
            margin: 5px;
            border-radius: 15px;
            cursor: pointer;
            color: white;
        }
        .ingredient {
            padding: 8px;
            margin: 5px;
            border: 1px solid #ddd;
            border-radius: 5px;
            cursor: pointer;
        }
        .ingredient:hover { background-color: #f0f0f0; }
        #results { margin-top: 20px; }
        .recipe-card {
            border: 1px solid #ddd;
            padding: 15px;
            margin: 10px 0;
            border-radius: 8px;
        }
    </style>
</head>
<body>
<h1>Gestionnaire de Recettes</h1>

<!-- Tags -->
<h2>Filtrer par Tags</h2>
<div id="tags">
    {% for tag in tags %}
        <span class="tag"
              style="background-color: {{ tag.color }}"
              onclick="filterByTag({{ tag.id }})">
            {{ tag.name }}
        </span>
    {% endfor %}
</div>

<!-- Ingrédients -->
<h2>Filtrer par Ingrédients</h2>
<div id="ingredients">
    {% for ingredient in ingredients %}
        <div class="ingredient" onclick="filterByIngredient({{ ingredient.id }})">
            {{ ingredient.name }} <small>({{ ingredient.category }})</small>
        </div>
    {% endfor %}
</div>

<!-- Recherche par nom d'ingrédient -->
<h2>Recherche par Ingrédient</h2>
<input type="text" id="ingredientSearch" placeholder="Tapez un ingrédient...">
<button onclick="searchByIngredient()">Rechercher</button>

<!-- Résultats -->
<div id="results"></div>

    <footer>
        <div class="container">
            <div class="footer-container">
                <div class="footer-col">
                    <div class="footer-logo">
                        <div class="logo-icon">
                            <div class="fridge" style="border-color: white;">
                                <div class="fridge-handle" style="background-color: white;"></div>
                                <div class="orange-tag"></div>
                            </div>
                        </div>
                        <div class="footer-logo-text">
                            COMPOSE <span>&amp;</span> ENJOY
                        </div>
                    </div>
                    <p>Transformez vos ingrédients en délices culinaires</p>
                </div>
                <div class="footer-col">
                    <h4>Liens rapides</h4>
                    <ul class="footer-links">
                        <li><a href="#features">Fonctionnalités</a></li>
                        <li><a href="#recipes">Recettes</a></li>
                        <li><a href="#about">À propos</a></li>
                        <li><a href="#contact">Contact</a></li>
                    </ul>
                </div>
                <div class="footer-col">
                    <h4>Catégories</h4>
                    <ul class="footer-links">
                        <li><a href="#">Petit-déjeuner</a></li>
                        <li><a href="#">Déjeuner</a></li>
                        <li><a href="#">Dîner</a></li>
                        <li><a href="#">Végétarien</a></li>
                        <li><a href="#">Desserts</a></li>
                    </ul>
                </div>
                <div class="footer-col">
                    <h4>Nous contacter</h4>
                    <ul class="footer-links">
                        <li><a href="#">Email</a></li>
                        <li><a href="#">Instagram</a></li>
                        <li><a href="#">Facebook</a></li>
                        <li><a href="#">Twitter</a></li>
                    </ul>
                </div>
            </div>
            <div class="copyright">
