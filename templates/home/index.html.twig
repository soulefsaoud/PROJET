    <script>


            function filterByTag(tagId) {
            fetch(`/recipes/by-tag/${tagId}`)
                .then(response => response.json())
                .then(data => {
                    displayResults(`Recettes avec le tag "${data.tag}"`, data.recipes);
                })
                .catch(error => console.error('Erreur:', error));
        }

            function filterByIngredient(ingredientId) {
            fetch(`/recipes/by-ingredient/${ingredientId}`)
                .then(response => response.json())
                .then(data => {
                    displayResults(`Recettes avec l'ingrédient "${data.ingredient}"`, data.recipes);
                })
                .catch(error => console.error('Erreur:', error));
        }

            function searchByIngredient() {
            const ingredient = document.getElementById('ingredientSearch').value;
            if (!ingredient.trim()) return;

            const formData = new FormData();
            formData.append('ingredient', ingredient);

            fetch('/recipes/search-ingredient', {
            method: 'POST',
            body: formData
        })
            .then(response => response.json())
            .then(data => {
            displayResults(`Recherche pour "${data.search}"`, data.recipes);
        })
            .catch(error => console.error('Erreur:', error));
        }

            function displayResults(title, recipes) {
            const resultsDiv = document.getElementById('results');
            let html = `<h3>${title}</h3>`;

            if (recipes.length === 0) {
            html += '<p>Aucune recette trouvée.</p>';
        } else {
            recipes.forEach(recipe => {
            html += `
                        <div class="recipe-card">
                            <h4>${recipe.name}</h4>
                            <p>${recipe.description}</p>
                        </div>
                    `;
        });
        }

            resultsDiv.innerHTML = html;
        }

            // Recherche en temps réel
            document.getElementById('ingredientSearch').addEventListener('keyup', function(e) {
            if (e.key === 'Enter') {
            searchByIngredient();
        }
        });
    </script>
{% endblock %}
