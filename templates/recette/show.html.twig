{% extends 'base.html.twig' %}

{% block title %}Recette{% endblock %}

{% block body %}
    <h1>Recette</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ recette.id }}</td>
            </tr>
            <tr>
                <th>Nom</th>
                <td>{{ recette.nom }}</td>
            </tr>
            <tr>
                <th>Ingredients</th>
                {% if recette.ingredientRecettes|length > 0 %}
                {% for ingredientRecette in recette.ingredientRecettes %}
                    <li>
                        <td><h2>{{ ingredientRecette.quantite }}</h2></td>
                        <!-- Ajoutez d'autres propriétés de l'ingrédient si nécessaire -->
                    </li>
                {% endfor %}
                {% else %}
                    <p>Aucun ingrédient trouvé.</p>
                {% endif %}

            </tr>
            <tr>
                <th>Instructions</th>
                <td>{{ recette.instructions }}</td>
            </tr>
            <tr>
                <th>TempsPreparation</th>
                <td>{{ recette.tempsPreparation }}</td>
            </tr>
            <tr>
                <th>TempsCuisson</th>
                <td>{{ recette.tempsCuisson }}</td>
            </tr>
            <tr>
                <th>Difficulte</th>
                <td>{{ recette.difficulte }}</td>
            </tr>
            <tr>
                <th>DateCreation</th>
                <td>{{ recette.dateCreation ? recette.dateCreation|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
            <tr>
                <th>NombreDePortions</th>
                <td>{{ recette.nombreDePortions }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('app_recette_index') }}">back to list</a>

    <a href="{{ path('app_recette_edit', {'id': recette.id}) }}">edit</a>

    {{ include('recette/_delete_form.html.twig') }}
{% endblock %}
