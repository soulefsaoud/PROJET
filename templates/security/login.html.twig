{% extends 'base.html.twig' %}

{% block stylesheets %}
    <style>
        :root {
            --primary-green: #2D6A41;
            --accent-orange: #FF9F1C;
            --light-gray: #F8F8F8;
            --white: #FFFFFF;
            --dark-text: #333333;
            --error-red: #dc3545;
            --success-green: #28a745;
        }
        * {
            margin: 0;
            padding: 0;
            box-sizing: border-box;
            font-family: 'Poppins', sans-serif;
        }
        body {
            background: linear-gradient(135deg, var(--light-gray) 0%, #ffffff 100%);
            color: var(--dark-text);
            line-height: 1.6;
            min-height: 100vh;
            display: flex;
            flex-direction: column;
        }
        .container {
            width: 100%;
            max-width: 1200px;
            margin: 0 auto;
            padding: 0 20px;
        }
        /* Ajoutez ici le reste de vos styles */
    </style>
{% endblock %}

{% block body %}
    {% block meta %}Accueil - Compose & Enjoy{% endblock %}
    {% block sidebar %}
        <div class="container">
            <h1>Bienvenue sur Compose & Enjoy</h1>
            <p>Votre application de recettes personnalisées !</p>
            {% if app.user %}
                <p>Bonjour {{ app.user.prenom }} {{ app.user.nom }} !</p>
                <a href="{{ path('app_logout') }}" class="btn">Se déconnecter</a>
            {% else %}
                <a href="{{ path('app_login') }}" class="btn">Se connecter</a>
            {% endif %}
        </div>
    {% endblock %}
    {% block heading %}Connexion - Compose & Enjoy{% endblock %}
    {% block content %}
        <div class="container">
            <div class="auth-container" id="authContainer">
                <div class="auth-form-container">
                    <!-- Formulaire de Connexion -->
                    <div class="login-form">
                        <h1 class="auth-title">Bon retour !</h1>
                        <p class="auth-subtitle">Connectez-vous pour découvrir de nouveaux délices culinaires</p>
                        {% if error %}
                            <div class="alert alert-error">
                                {{ error.messageKey|trans(error.messageData, 'security') }}
                            </div>
                        {% endif %}
                        {% for message in app.flashes('success') %}
                            <div class="alert alert-success">
                                {{ message }}
                            </div>
                        {% endfor %}
                        <form method="post">
                            <div class="form-group">
                                <label for="username" class="form-label">
                                    <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" style="margin-right: 8px; vertical-align: middle;">
                                        <path d="M4 4h16c1.1 0 2 .9 2 2v12c0 1.1-.9 2-2 2H4c-1.1 0-2-.9-2-2V6c0-1.1.9-2 2-2z"></path>
                                        <polyline points="22,6 12,13 2,6"></polyline>
                                    </svg>
                                    Adresse email
                                </label>
                                <input type="email" value="{{ last_username }}" name="_username" id="username" class="form-control" autocomplete="email" required autofocus placeholder="votre@email.com">
                            </div>
                            <div class="form-group">
                                <label for="password" class="form-label">
                                    <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" style="margin-right: 8px; vertical-align: middle;">
                                        <rect x="3" y="11" width="18" height="11" rx="2" ry="2"></rect>
                                        <circle cx="12" cy="16" r="1"></circle>
                                        <path d="M7 11V7a5 5 0 0 1 10 0v4"></path>
                                    </svg>
                                    Mot de passe
                                </label>
                                <input type="password" name="_password" id="password" class="form-control" autocomplete="current-password" required placeholder="••••••••">
                            </div>
                            <div class="checkbox-group">
                                <input type="checkbox" name="_remember_me" id="remember_me">
                                <label for="remember_me">Se souvenir de moi</label>
                            </div>
                            <input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}">
                            <button class="btn" type="submit">
                                Se connecter
                            </button>
                        </form>
                        <div class="auth-links">
                            <a href="{{ path('app_forgot_password_request') }}">Mot de passe oublié ?</a>
                        </div>
                        <div class="divider">
                            <span>ou</span>
                        </div>
                        <div class="auth-links">
                            <p>Pas encore de compte ? <a href="javascript:void(0)" onclick="toggleAuthMode()">Créer un compte</a></p>
                        </div>
                    </div>
                    <!-- Formulaire d'Inscription -->
                    <div class="register-form">
                        <h1 class="auth-title">Créer un compte</h1>
                        <p class="auth-subtitle">Rejoignez-nous pour transformer vos ingrédients en délices</p>
                        {{ form_start(registrationForm, {'attr': {'novalidate': 'novalidate'}}) }}
                        <div class="form-group">
                            <label for="registration_form_prenom" class="form-label">
                                <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" style="margin-right: 8px; vertical-align: middle;">
                                    <path d="M20 21v-2a4 4 0 0 0-4-4H8a4 4 0 0 0-4 4v2"></path>
                                    <circle cx="12" cy="7" r="4"></circle>
                                </svg>
                                Prénom
                            </label>
                            {{ form_widget(registrationForm.prenom, {'attr': {'class': 'form-control', 'placeholder': 'Votre prénom'}}) }}
                            {{ form_errors(registrationForm.prenom) }}
                        </div>
                        <!-- Ajoutez ici le reste de votre formulaire d'inscription -->
                    </div>
                </div>
                <div class="auth-welcome">
                    <div class="welcome-content">
                        <h2 class="welcome-title">Bienvenue chez Compose & Enjoy</h2>
                        <p class="welcome-text">
                            Découvrez des milliers de recettes adaptées à vos ingrédients disponibles.
                            Transformez votre frigo en source d'inspiration culinaire !
                        </p>
                        <div style="margin-top: 30px;">
                            <div style="display: flex; align-items: center; gap: 15px; margin-bottom: 15px;">
                                <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" style="color: var(--accent-orange);">
                                    <polyline points="20,6 9,17 4,12"></polyline>
                                </svg>
                                <span>Recettes personnalisées</span>
                            </div>
                            <div style="display: flex; align-items: center; gap: 15px; margin-bottom: 15px;">
                                <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" style="color: var(--accent-orange);">
                                    <polyline points="20,6 9,17 4,12"></polyline>
                                </svg>
                                <span>Instructions détaillées</span>
                            </div>
                            <div style="display: flex; align-items: center; gap: 15px;">
                                <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" style="color: var(--accent-orange);">
                                    <polyline points="20,6 9,17 4,12"></polyline>
                                </svg>
                                <span>Communauté de passionnés</span>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    {% endblock %}
{% endblock %}

{% block javascripts %}
    <script>
        // Toggle between login and register forms
        function toggleAuthMode() {
            const container = document.querySelector('.auth-container');
            container.classList.toggle('register-mode');
        }
        // Add smooth transitions
        document.addEventListener('DOMContentLoaded', function() {
            const forms = document.querySelectorAll('form');
            forms.forEach(form => {
                form.addEventListener('submit', function() {
                    const submitBtn = form.querySelector('.btn');
                    if (submitBtn) {
                        submitBtn.innerHTML = '<span>Chargement...</span>';
                        submitBtn.disabled = true;
                    }
                });
            });
        });
    </script>
{% endblock %}
