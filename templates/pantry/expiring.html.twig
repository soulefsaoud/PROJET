
{% extends 'base.html.twig' %}

{% block title %}Ingrédients qui expirent bientôt{% endblock %}

{% block body %}
    <div class="container mt-4">
        <div class="row">
            <div class="col-md-12">
                <div class="d-flex justify-content-between align-items-center mb-4">
                    <h1>
                        <i class="fas fa-clock text-warning"></i> Ingrédients qui expirent bientôt
                    </h1>
                    <a href="{{ path('pantry_index') }}" class="btn btn-secondary">
                        <i class="fas fa-arrow-left"></i> Retour au garde-manger
                    </a>
                </div>

                {% if expiringIngredients is empty %}
                    <div class="alert alert-success">
                        <i class="fas fa-check-circle"></i>
                        Aucun ingrédient n'expire dans les 7 prochains jours !
                    </div>
                {% else %}
                    <div class="alert alert-warning">
                        <i class="fas fa-exclamation-triangle"></i>
                        {{ expiringIngredients|length }} ingrédient{{ expiringIngredients|length > 1 ? 's' : '' }}
                        expire{{ expiringIngredients|length > 1 ? 'nt' : '' }} bientôt
                    </div>

                    <div class="row">
                        {% for userIngredient in expiringIngredients %}
                            <div class="col-md-6 col-lg-4">
                                <div class="card border-warning mb-3">
                                    <div class="card-body">
                                        <h5 class="card-title">{{ userIngredient.ingredient.nom }}</h5>
                                        <p class="card-text">
                                            <strong>Quantité:</strong> {{ userIngredient.quantity }} {{ userIngredient.getUniteMesure() }}<br>
                                            <strong>Expire le:</strong>
                                            {% set today = date() %}
                                            {% set expiry = userIngredient.dateExpiration %}
                                            {% set daysLeft = expiry.diff(today).days %}

                                            {% if expiry < today %}
                                                <span class="text-danger">
                                                    {{ expiry|date('d/m/Y') }} (Expiré depuis {{ daysLeft }} jour{{ daysLeft > 1 ? 's' : '' }})
                                                </span>
                                            {% elseif daysLeft == 0 %}
                                                <span class="text-danger">
                                                    {{ expiry|date('d/m/Y') }} (Aujourd'hui)
                                                </span>
                                            {% elseif daysLeft == 1 %}
                                                <span class="text-warning">
                                                    {{ expiry|date('d/m/Y') }} (Demain)
                                                </span>
                                            {% else %}
                                                <span class="text-warning">
                                                    {{ expiry|date('d/m/Y') }} (Dans {{ daysLeft }} jours)
                                                </span>
                                            {% endif %}
                                        </p>
                                        <a href="{{ path('pantry_edit', {'id': userIngredient.id}) }}"
                                           class="btn btn-sm btn-outline-primary">
                                            <i class="fas fa-edit"></i> Modifier
                                        </a>
                                    </div>
                                </div>
                            </div>
                        {% endfor %}
                    </div>
                {% endif %}
            </div>
        </div>
    </div>
{% endblock %}
